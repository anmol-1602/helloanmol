---
import Navbar from "../layouts/navbar.astro";
import { getCollection } from "astro:content";

// Fetch collections
const blogPosts = await getCollection("blogs");
const retrospectivePosts = await getCollection("retrospectives");
const booknotes = await getCollection("booknotes");

// Merge and sort by date (newest first)
const allPosts = [
  ...blogPosts.map((post) => ({ ...post, type: "blog" })),
  ...retrospectivePosts.map((post) => ({ ...post, type: "retrospect" })),
  ...booknotes.map((post) => ({ ...post, type: "booknotes" })),
].sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// Take top 5
const latestPosts = allPosts.slice(0, 5);
