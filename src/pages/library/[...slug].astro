---
import '../../styles/global.css'; // Adjust the path if necessary
import { getCollection } from 'astro:content';
// This function tells Astro which pages to build at build time
export async function getStaticPaths() {
  const bookEntries = await getCollection('booknotes');
  return bookEntries.map(entry => ({
    params: { slug: entry.slug }, props: { entry },
  }));
}
const { entry } = Astro.props;
const { Content } = await entry.render();
---

<div class="min-h-screen bg-[#F9F7F4] font-sans text-slate-600 antialiased">
  <main class="mx-auto max-w-2xl px-6 py-20">
    <a href="/library" class="text-[10px] font-black uppercase tracking-widest text-slate-400 hover:text-rose-500 transition-colors">
      â† Back to Shelf
    </a>

    <header class="mt-12 mb-16">
      <h1 class="font-serif text-5xl text-slate-900 italic mb-4">{entry.data.title}</h1>
      <p class="text-xl font-serif text-slate-400 italic">By {entry.data.author}</p>
      
      <div class="mt-8 flex gap-8 border-t border-slate-200 pt-8">
        <div>
          <span class="block text-[8px] font-black uppercase tracking-widest text-slate-300">Rating</span>
          <span class="font-serif text-lg text-slate-900 italic">{entry.data.rating}</span>
        </div>
        <div>
          <span class="block text-[8px] font-black uppercase tracking-widest text-slate-300">Finished</span>
          <span class="font-serif text-lg text-slate-900 italic">{entry.data.finished}</span>
        </div>
      </div>
    </header>

    <article class="prose prose-slate prose-rose lg:prose-lg max-w-none">
      <Content />
    </article>
  </main>
</div>
