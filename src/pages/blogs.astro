---
import Navbar from '../layouts/navbar.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('blogs');
const sortedPosts = posts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// Formats month as numeric, e.g., '02'
const formatMonthNumber = (date: Date) => {
  return (date.getMonth() + 1).toString().padStart(2, '0');
};

const formatMonthName = (date: Date) => {
  return date.toLocaleString("default", { month: "short" }).toUpperCase();
};
---

<Navbar title="Writing | HelloAnmol Archive">
  <div class="animate-layout-entry px-4 pb-32 max-w-7xl mx-auto">
    
    <header class="mb-12 flex items-baseline justify-between border-b border-slate-100 pb-8 pt-6">
      <div>
        <h1 class="font-serif text-4xl italic tracking-tighter text-slate-900">
          The BlogBook<span class="text-rose-500">.</span>
        </h1>
        <p class="mt-2 font-serif text-sm italic text-slate-400">A digital garden of half-baked ideas and finished thoughts.</p>
      </div>
    </header>

    <div class="divide-y divide-slate-100">
      {sortedPosts.map((post) => (
        <article class="group relative py-6 transition-all duration-300 hover:bg-rose-50/30 rounded-xl px-2">
          <div class="grid grid-cols-12 items-center gap-4">
            
            <!-- Metadata Column: Publication Style -->
            <div class="col-span-3 md:col-span-2 flex flex-col gap-1 items-start">
             <span class=" font-mono text-[12px]  text-slate-900 ">
               {post.data.pubDate.getDate().toString().padStart(2, '0')} 
               <span class="font-mono text-[12px] uppercase text-slate-800 font-normal">{formatMonthName(post.data.pubDate)}</span>
              </span>
              <span class="font-mono text-[12px]  text-slate-400 group-hover:text-rose-500 transition-colors mt-0.5">
                {post.data.pubDate.getFullYear()}
              </span>
            </div>

            <!-- Content Column -->
            <div class="col-span-9 md:col-span-6">
              <h2 class="font-serif text-xl italic text-slate-900 group-hover:translate-x-1 transition-transform">
                <a href={`/blogs/${post.slug}`}>{post.data.title}</a>
              </h2>
              <p class="text-xs leading-relaxed text-slate-400 line-clamp-1 group-hover:line-clamp-none transition-all mt-1">
                {post.data.description}
              </p>
            </div>

            <!-- Telemetry Column: Editorial Tags & Link -->
            
            <div class="hidden md:col-span-4 md:flex items-center justify-end gap-6 text-right">
               <div class="flex flex-col items-start gap-1">
                  <div class="rounded text-[8px] uppercase border border-slate-200 tracking-[0.1em] text-slate-400 px-2 py-0.5 group-hover:border-rose-400 group-hover:bg-rose-50 group-hover:text-rose-600 transition-all">
                    #{post.data.category || 'General'}
                  </div>
               </div>
               
               <a href={`/blogs/${post.slug}`} class="flex h-8 w-24 items-center justify-between group-hover:border-rose-500 transition-colors pb-1 ml-4 mt-2">
                  <span class="text-[9px] font-bold italic uppercase text-slate-300 group-hover:text-rose-600 transition-colors shrink-0">
                    Read Article
                  </span>
                  <span class="text-[10px] text-slate-300 group-hover:text-rose-500 transition-colors shrink-0">â†—</span>
               </a>
            </div>
          </div>
        </article>
      ))}
    </div>

    
  </div>
</Navbar>
