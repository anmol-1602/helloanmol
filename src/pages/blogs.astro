---
import '../styles/global.css';
import { getCollection } from 'astro:content';

const posts = await getCollection('blogs');
const sortedPosts = posts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const formatDate = (date: Date) => {
  const month = (date.getMonth() + 1).toString().padStart(2, '0');
  const day = date.getDate().toString().padStart(2, '0');
  return `${month}.${day}`;
};
---

<div class="min-h-screen bg-[#FDFCFB] font-sans text-slate-800 antialiased selection:bg-rose-100/80">
  
  <nav class="mx-auto flex max-w-4xl items-center justify-between px-6 py-10 md:py-16">
    <div class="group flex items-center gap-2 cursor-pointer">
      <div class="h-2 w-2 rounded-full bg-rose-500 group-hover:animate-ping"></div>
      <h1 class="text-xs md:text-sm font-black uppercase tracking-[0.4em] text-slate-900">H.Anmol</h1>
    </div>
    <div class="flex items-center gap-6 md:gap-10 text-[10px] md:text-xs font-bold uppercase tracking-widest text-slate-400">
      <a href="/blogs" class="relative text-slate-900 after:absolute after:-bottom-1 after:left-0 after:h-px after:w-5 after:bg-rose-500">Writing</a>
      <a href="/library" class="transition-all hover:text-slate-900">Library</a>
    </div>
  </nav>

  <main class="mx-auto max-w-4xl px-6 pb-32">
    <header class="relative mb-20 md:mb-32 pt-12">
      <div class="absolute -left-6 -top-8 text-[120px] md:text-[180px] font-serif italic text-slate-100/50 select-none leading-none pointer-events-none">Index</div>
      
      <h1 class="relative font-serif text-5xl md:text-8xl italic tracking-tighter text-slate-900">
        The Archive<span class="text-rose-500">.</span>
      </h1>
      <p class="mt-8 font-serif text-lg md:text-xl italic text-slate-400 max-w-md leading-relaxed">
        A digital garden of half-baked ideas and finished thoughts.
      </p>
    </header>

    <div class="space-y-6 md:space-y-8">
      {sortedPosts.map((post, index) => (
        <article class="group relative rounded-[2rem] md:rounded-[3rem] border border-transparent p-6 md:p-10 transition-all duration-700 hover:border-slate-100 hover:bg-white hover:shadow-[0_40px_80px_-30px_rgba(0,0,0,0.06)]">
          <div class="flex flex-col gap-6 md:flex-row md:items-start md:gap-20">
            
            <div class="flex shrink-0 flex-row items-baseline gap-3 md:w-28 md:flex-col md:gap-1">
              <span class="font-mono text-base md:text-lg font-black tracking-tighter text-slate-900">
                {formatDate(post.data.pubDate)}
              </span>
              <span class="font-mono text-xs font-bold uppercase tracking-[0.2em] text-slate-300">
                {post.data.pubDate.getFullYear()}
              </span>
              {index === 0 && (
                <div class="hidden md:block">
                  <div class="mt-4 h-px w-full bg-slate-100"></div>
                  <span class="mt-3 block text-[9px] font-black uppercase tracking-[0.3em] text-rose-500/80">Latest Log</span>
                </div>
              )}
            </div>
            
            <div class="flex-grow">
              <h2 class="font-serif text-3xl md:text-5xl text-slate-900 transition-all duration-500 group-hover:text-rose-500 leading-[1.1] tracking-tight">
                <a href={`/blogs/${post.slug}`}>
                  {post.data.title}
                </a>
              </h2>
              
              <p class="mt-6 max-w-xl text-base md:text-lg leading-relaxed text-slate-500/90">
                {post.data.description}
              </p>
              
              <div class="mt-10 flex items-center justify-between border-t border-slate-50 pt-8">
                 <div class="flex items-center gap-4">
                    <span class="rounded-full bg-slate-100/50 px-4 py-1.5 text-[10px] font-bold uppercase tracking-[0.2em] text-slate-500 group-hover:bg-rose-50 group-hover:text-rose-500 transition-colors">
                      {post.data.category}
                    </span>
                 </div>
                 <a href={`/blogs/${post.slug}`} class="text-xs font-bold italic text-slate-400 transition-all group-hover:translate-x-2 group-hover:text-slate-900">
                    Full Access —>
                 </a>
              </div>
            </div>
          </div>
        </article>
      ))}
    </div>
  </main>

  <footer class="mt-20 py-24 text-center border-t border-slate-50">
    <p class="font-mono text-[10px] uppercase tracking-[0.6em] text-slate-300">Bengaluru • 2026</p>
  </footer>
</div>
