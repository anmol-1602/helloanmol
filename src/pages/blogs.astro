---
import Navbar from '../layouts/navbar.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('blogs');
const sortedPosts = posts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// Formats month as numeric, e.g., '02'
const formatMonthNumber = (date: Date) => {
  return (date.getMonth() + 1).toString().padStart(2, '0');
};

const formatMonthName = (date: Date) => {
  return date.toLocaleString("default", { month: "short" }).toUpperCase();
};
---

<Navbar title="Writing | HelloAnmol Archive">
  <div class="animate-layout-entry px-4 pb-32 max-w-7xl mx-auto">
    
    <header class="mb-12 flex items-baseline justify-between border-b border-slate-100 pb-8 pt-6">
      <div>
        <h1 class="font-serif text-4xl italic tracking-tighter text-slate-900">
          The Archive<span class="text-rose-500">.</span>
        </h1>
        <p class="mt-2 font-serif text-sm italic text-slate-400">A digital garden of half-baked ideas and finished thoughts.</p>
      </div>
      <div class="text-right font-mono text-[9px] uppercase tracking-[0.3em] text-slate-300 leading-relaxed">
        Garden v2.0 <br/> Total Articles: {sortedPosts.length.toString().padStart(2, '0')}
      </div>
    </header>

    <div class="divide-y divide-slate-100">
      {sortedPosts.map((post) => (
        <article class="group relative py-6 transition-all duration-300 hover:bg-rose-50/30 rounded-xl px-2">
          <div class="grid grid-cols-12 items-center gap-4">
            
            <!-- Metadata Column -->
            <div class="col-span-3 md:col-span-2 flex flex-col gap-1">
              <span class="font-mono text-[10px] font-black text-slate-900">
                {formatMonthNumber(post.data.pubDate)}. {post.data.pubDate.getFullYear()}
              </span>
              <span class="text-[9px] font-bold uppercase tracking-widest text-slate-300 group-hover:text-rose-500 transition-colors">
                {formatMonthName(post.data.pubDate)}
              </span>
            </div>

            <!-- Content Column -->
            <div class="col-span-9 md:col-span-6">
              <h2 class="font-serif text-xl italic text-slate-900 group-hover:translate-x-1 transition-transform">
                <a href={`/blogs/${post.slug}`}>{post.data.title}</a>
              </h2>
              <p class="text-xs leading-relaxed text-slate-400 line-clamp-1 group-hover:line-clamp-none transition-all mt-1">
                {post.data.description}
              </p>
            </div>

            <!-- Telemetry Column (Hidden on strictly mobile) -->
            <div class="hidden md:col-span-4 md:flex items-center justify-end gap-6 text-right">
               <div class="flex flex-col gap-1 text-left">
                 <span class="text-[9px] font-mono text-slate-300 uppercase">#{post.data.category || 'General'}</span> 
                  <!-- <span class="rounded-full bg-slate-50 px-3 py-1 text-[9px] font-black uppercase tracking-widest text-slate-400 group-hover:bg-rose-50 group-hover:text-rose-500 transition-colors">
                      {post.data.category}
                    </span> -->
               </div>
               
               <a href={`/blogs/${post.slug}`} class="text-[10px] font-bold italic text-slate-300 transition-all group-hover:translate-x-1 group-hover:text-slate-900">
                    Full Access â€”>
                 </a>
            </div>
          </div>
        </article>
      ))}
    </div>

    <!-- Sticky Bottom Indicator -->
    <div class="fixed bottom-6 left-6 hidden xl:block z-50">
       <div class="flex items-center gap-3 bg-white/80 px-4 py-2 backdrop-blur-sm border border-slate-100 rounded-full shadow-sm">
          <div class="h-1.5 w-1.5 rounded-full bg-rose-500 animate-pulse"></div>
          <span class="text-[9px] font-mono uppercase tracking-[0.2em] text-slate-400">Archive Active: Writing</span>
       </div>
    </div>
    
  </div>
</Navbar>
