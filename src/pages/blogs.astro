---
import '../styles/global.css';
import { getCollection } from 'astro:content';

const posts = await getCollection('blogs');
const sortedPosts = posts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const formatDate = (date: Date) => {
  const month = (date.getMonth() + 1).toString().padStart(2, '0');
  const day = date.getDate().toString().padStart(2, '0');
  return `${month}.${day}`;
};
---

<div class="min-h-screen bg-[#FDFCFB] font-sans text-slate-800 antialiased selection:bg-rose-100/80">
  
  <nav class="mx-auto flex max-w-4xl items-center justify-between px-6 py-10">
    <div class="group flex items-center gap-2 cursor-pointer">
      <div class="h-1.5 w-1.5 rounded-full bg-rose-500 group-hover:animate-ping"></div>
      <h1 class="text-[10px] font-black uppercase tracking-[0.4em] text-slate-900">H.Anmol</h1>
    </div>
    <div class="flex items-center gap-8 text-[10px] font-bold uppercase tracking-widest text-slate-400">
      <a href="/blogs" class="relative text-slate-900 after:absolute after:-bottom-1 after:left-0 after:h-px after:w-4 after:bg-rose-500">Writing</a>
      <a href="/library" class="transition-all hover:text-slate-900">Library</a>
    </div>
  </nav>

  <main class="mx-auto max-w-4xl px-6 pb-24">
    <header class="relative mb-20 pt-12">
      <div class="absolute -left-6 -top-4 text-[100px] font-serif italic text-slate-100/60 select-none leading-none pointer-events-none">Index</div>
      <h1 class="relative font-serif text-5xl italic tracking-tighter text-slate-900 md:text-6xl">
        The Archive<span class="text-rose-500">.</span>
      </h1>
      <p class="mt-4 font-serif text-base italic text-slate-400 max-w-sm">
        A digital garden of half-baked ideas and finished thoughts.
      </p>
    </header>

    <div class="space-y-4">
      {sortedPosts.map((post, index) => (
        <article class="group relative rounded-3xl border border-transparent p-6 md:p-8 transition-all duration-500 hover:border-slate-100 hover:bg-white hover:shadow-[0_30px_60px_-20px_rgba(0,0,0,0.04)]">
          <div class="flex flex-col gap-4 md:flex-row md:items-start md:gap-14">
            
            <div class="flex shrink-0 flex-row items-baseline gap-3 md:w-24 md:flex-col md:gap-0.5">
              <span class="font-mono text-sm font-black tracking-tighter text-slate-900">
                {formatDate(post.data.pubDate)}
              </span>
              <span class="font-mono text-[10px] font-bold uppercase tracking-widest text-slate-300">
                {post.data.pubDate.getFullYear()}
              </span>
            </div>
            
            <div class="flex-grow">
              <h2 class="font-serif text-2xl md:text-3xl text-slate-900 transition-all duration-300 group-hover:text-rose-500 leading-tight tracking-tight">
                <a href={`/blogs/${post.slug}`}>
                  {post.data.title}
                </a>
              </h2>
              
              <p class="mt-3 max-w-2xl text-base md:text-lg leading-relaxed text-slate-500 opacity-90">
                {post.data.description}
              </p>
              
              <div class="mt-6 flex items-center justify-between">
                 <div class="flex items-center gap-3">
                    <span class="rounded-full bg-slate-50 px-3 py-1 text-[9px] font-black uppercase tracking-widest text-slate-400 group-hover:bg-rose-50 group-hover:text-rose-500 transition-colors">
                      {post.data.category}
                    </span>
                 </div>
                 <a href={`/blogs/${post.slug}`} class="text-[10px] font-bold italic text-slate-300 transition-all group-hover:translate-x-1 group-hover:text-slate-900">
                    Full Access —>
                 </a>
              </div>
            </div>
          </div>
        </article>
      ))}
    </div>
  </main>

  <footer class="mt-20 py-20 text-center opacity-30">
    <p class="font-mono text-[9px] uppercase tracking-[0.6em] text-slate-400">Bengaluru • 2026</p>
  </footer>
</div>
