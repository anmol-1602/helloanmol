---
import Navbar from "../layouts/navbar.astro";
import { getCollection } from "astro:content";

const retros = await getCollection("retrospectives");
const sortedRetros = retros.sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

// Formats month as numeric, e.g., '02'
const formatMonthNumber = (date: Date) => {
  return (date.getMonth() + 1).toString().padStart(2, '0');
};

const formatMonthName = (date: Date) => {
  return date.toLocaleString("default", { month: "short" }).toUpperCase();
};
---

<Navbar title="Retrospects | HelloAnmol Logs">
  <div class="animate-layout-entry px-4 pb-32 max-w-7xl mx-auto">
    
    <header class="mb-12 flex items-baseline justify-between border-b border-slate-100 pb-8 pt-6">
      <div>
        <h1 class="font-serif text-4xl italic tracking-tighter text-slate-900">
          Retro<span class="italic text-slate-300">spects.</span>
        </h1>
        <p class="mt-2 font-serif text-sm italic text-slate-400">Monthly check-ins and life logs.</p>
      </div>
      <div class="text-right font-mono text-[9px] uppercase tracking-[0.3em] text-slate-300 leading-relaxed">
        Logbook v2.0 <br/> Total Entries: {sortedRetros.length.toString().padStart(2, '0')}
      </div>
    </header>

    <div class="divide-y divide-slate-100">
      {sortedRetros.map((retro) => (
        <article class="group relative py-6 transition-all duration-300 hover:bg-purple-50/30 rounded-xl px-2">
          <div class="grid grid-cols-12 items-center gap-4">
            
            <!-- Metadata Column -->
            <div class="col-span-3 md:col-span-2 flex flex-col gap-1">
              <span class="font-mono text-[10px] font-black text-slate-900">
                {formatMonthNumber(retro.data.pubDate)}. {retro.data.pubDate.getFullYear()}
              </span>
              <span class="text-[9px] font-bold uppercase tracking-widest text-slate-300 group-hover:text-purple-500 transition-colors">
                {formatMonthName(retro.data.pubDate)}
              </span>
            </div>

            <!-- Content Column -->
            <div class="col-span-9 md:col-span-6">
              <h2 class="font-serif text-xl italic text-slate-900 group-hover:translate-x-1 transition-transform">
                <a href={`/retrospectives/${retro.slug}`}>{retro.data.title}</a>
              </h2>
              <p class="text-xs leading-relaxed text-slate-400 line-clamp-1 group-hover:line-clamp-none transition-all mt-1">
                {retro.data.summary}
              </p>
            </div>
            

            <!-- Telemetry Column (Hidden on strictly mobile) -->
            <div class="hidden md:col-span-4 md:flex items-center justify-end gap-6 text-right">
               <div class="flex flex-col gap-1 text-left">
                <span class="px-3 py-1 rounded-full bg-slate-50 text-[9px] font-black uppercase tracking-widest text-slate-500 group-hover:bg-purple-50 group-hover:text-purple-600 transition-colors">
                  Mood: {retro.data.mood || 'Neutral'}
                </span>  
                <span class="text-[10px] font-medium tracking-wide text-slate-400">
                  Focus: {retro.data.focusArea}
                </span>
               </div>
               
               <a href={`/retrospectives/${retro.slug}`} class="text-[11px] font-bold italic text-slate-400 transition-all group-hover:translate-x-1 group-hover:text-slate-900">
                    Read Log â€”>
                 </a>
            </div>
          </div>
        </article>
      ))}
    </div>

    <!-- Sticky Bottom Indicator -->
    <div class="fixed bottom-6 left-6 hidden xl:block z-50">
       <div class="flex items-center gap-3 bg-white/80 px-4 py-2 backdrop-blur-sm border border-slate-100 rounded-full shadow-sm">
          <div class="h-1.5 w-1.5 rounded-full bg-purple-500 animate-pulse"></div>
          <span class="text-[9px] font-mono uppercase tracking-[0.2em] text-slate-400">Logbook Active: Reading</span>
       </div>
    </div>
    
  </div>
</Navbar>
