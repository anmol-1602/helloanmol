---
import "../styles/global.css";

interface Props {
  title?: string;
}

const { title = "HelloAnmol" } = Astro.props;
const { pathname } = Astro.url;

/** * Helper to determine active link styles.
 * It checks if the current URL starts with the link path.
 */
const getLinkClass = (path: string) => {
  const activeBase = "transition-all duration-300 ";
  const isActive =
    pathname === path || (path !== "/" && pathname.startsWith(path));

  return isActive
    ? `${activeBase} text-rose-500 font-bold opacity-100`
    : `${activeBase} hover:opacity-100 opacity-70`;
};
---

